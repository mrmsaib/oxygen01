<div>
	<div class="row row-rtl">
	  <% Category.all.each do |category| %>
			<div class="col-md-2">
		<%= link_to category.name, posts_path(category: category.name) %>
			</div>
			<% end %>
	</div>
	<table class="table table-condensed table-hover">
	  <thead>
	    <tr>
	      <th class="text-center test"></th>
	      <th class="text-center">العنوان</th>
	      <th class="text-center">الوصف للخبر</th>
	      <th class="text-center">المصدر</th>
				
	    </tr>
	  </thead>

	  <tbody>
	    <% @posts.each do |post| %>
	      <tr>
	        <td class="test"><%= link_to(image_tag(post.image, class: "img-thumbnail"), post.source_url, target: '_blank') %></td>
	        <td><%= link_to(post.headline, post.source_url, target: '_blank') %></td>
	        <td><%= truncate(post.description, length: 200) %></td>
	        <td class="text-center"><%= image_tag(post.source, class: "img-responsive") %></td>
	        <td class="text-center"><%= link_to 'تعليق وتقييم', post, class: 'btn btn-link' %></td>
					<% if (user_signed_in?) && (current_user.admin?) %>
			        <td><%= link_to 'تعديل', edit_post_path(post), class: 'btn btn-link' %></td>
			        <td><%= link_to 'حذف', post, method: :delete, data: { confirm: 'هل أنت متأكد؟' }, class: 'btn btn-link' %></td>
					<% end %>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<br>
	<% if (user_signed_in?) && (current_user.admin?) %>
	  <h3>
		<%= link_to 'بوست جديد', new_post_path %> ||
		<%= link_to 'فئة جديده', new_category_path %>
	  </h3>
	<% end %>
</div>